            // الحصول على بيانات من localStorage أو استخدام البيانات الافتراضية
            let employees = JSON.parse(localStorage.getItem('employees')) || defaultEmployees;
            let contracts = JSON.parse(localStorage.getItem('contracts')) || defaultContracts;
            let evaluations = JSON.parse(localStorage.getItem('evaluations')) || defaultEvaluations;
            let fines = JSON.parse(localStorage.getItem('fines')) || defaultFines;
            
            // حفظ البيانات في localStorage
            function saveData() {
                localStorage.setItem('employees', JSON.stringify(employees));
                localStorage.setItem('contracts', JSON.stringify(contracts));
                localStorage.setItem('evaluations', JSON.stringify(evaluations));
                localStorage.setItem('fines', JSON.stringify(fines));
                updateDashboard();
                populateEmployeeDropdowns();
            }
            
            // تحديث لوحة الإحصائيات
            function updateDashboard() {
                // إحصائيات الموظفين
                const total = employees.length;
                const active = employees.filter(e => e.status === 'نشط').length;
                const vacation = employees.filter(e => e.status === 'إجازة').length;
                const inactive = employees.filter(e => e.status === 'غير نشط').length;
                
                document.getElementById('total-count').textContent = total;
                document.getElementById('active-count').textContent = active;
                document.getElementById('vacation-count').textContent = vacation;
                document.getElementById('inactive-count').textContent = inactive;
                
                // إحصائيات العقود
                document.getElementById('contracts-count').textContent = contracts.length;
                document.getElementById('active-contracts').textContent = contracts.filter(c => c.status === 'نشط').length;
                document.getElementById('expiring-contracts').textContent = contracts.filter(c => c.status === 'ينتهي قريباً').length;
                document.getElementById('expired-contracts').textContent = contracts.filter(c => c.status === 'منتهي').length;
                
                // إحصائيات التقييمات
                document.getElementById('total-evaluations').textContent = evaluations.length;
                document.getElementById('excellent-evaluations').textContent = evaluations.filter(e => e.overallEvaluation >= 90).length;
                document.getElementById('good-evaluations').textContent = evaluations.filter(e => e.overallEvaluation >= 75 && e.overallEvaluation < 90).length;
                document.getElementById('poor-evaluations').textContent = evaluations.filter(e => e.overallEvaluation < 75).length;
                
                // إحصائيات الغرامات
                document.getElementById('total-fines').textContent = fines.length;
                document.getElementById('paid-fines').textContent = fines.filter(f => f.status === 'مدفوعة').length;
                document.getElementById('pending-fines').textContent = fines.filter(f => f.status === 'معلقة').length;
                
                // إجمالي مبلغ الغرامات
                const totalAmount = fines.reduce((sum, fine) => sum + fine.amount, 0);
                document.getElementById('fines-amount').textContent = new Intl.NumberFormat('ar-IQ').format(totalAmount);
                
                // إحصائيات الغرامات في البطاقات الجانبية
                const pendingAmount = fines.filter(f => f.status === 'معلقة').reduce((sum, fine) => sum + fine.amount, 0);
                const paidAmount = fines.filter(f => f.status === 'مدفوعة').reduce((sum, fine) => sum + fine.amount, 0);
                
                document.getElementById('fines-stats-value').textContent = new Intl.NumberFormat('ar-IQ').format(pendingAmount) + ' د.ع';
                document.getElementById('payments-stats-value').textContent = new Intl.NumberFormat('ar-IQ').format(paidAmount) + ' د.ع';
                
                // قائمة الموظفين الأكثر غرامات
                const topEmployees = {};
                fines.forEach(fine => {
                    if (!topEmployees[fine.employeeId]) {
                        topEmployees[fine.employeeId] = 0;
                    }
                    topEmployees[fine.employeeId] += fine.amount;
                });
                
                const sortedEmployees = Object.entries(topEmployees)
                    .sort((a, b) => b[1] - a[1])
                    .slice(0, 3);
                
                let topEmployeesHTML = '';
                sortedEmployees.forEach(([employeeId, amount]) => {
                    const employee = employees.find(e => e.id === parseInt(employeeId));
                    if (employee) {
                        topEmployeesHTML += `
                            <div class="d-flex justify-content-between align-items-center mb-2 p-2 border-bottom">
                                <div>
                                    <strong>${employee.firstName} ${employee.lastName}</strong>
                                    <div class="text-muted">${employee.job}</div>
                                </div>
                                <div class="badge bg-danger">${new Intl.NumberFormat('ar-IQ').format(amount)} د.ع</div>
                            </div>
                        `;
                    }
                });
                
                if (topEmployeesHTML === '') {
                    topEmployeesHTML = '<p class="text-center text-muted">لا توجد بيانات</p>';
                }
                
                document.getElementById('top-employees-list').innerHTML = topEmployeesHTML;
            }
            
            // تهيئة التطبيق
            function initApp() {
                renderEmployees();
                renderContracts();
                renderEvaluations();
                renderFines();
                updateDashboard();
                setupEventListeners();
                populateEmployeeDropdowns();
            }
            
            // تهيئة معالجي الأحداث
            function setupEventListeners() {
                // إضافة موظف جديد
                document.getElementById('add-employee-btn').addEventListener('click', showEmployeeForm);
                document.getElementById('add-first-employee').addEventListener('click', showEmployeeForm);
                
                // إضافة عقد جديد
                document.getElementById('add-contract-btn').addEventListener('click', showContractForm);
                
                // إضافة تقييم جديد
                document.getElementById('add-evaluation-btn').addEventListener('click', showEvaluationForm);
                
                // إضافة غرامة جديدة
                document.getElementById('add-fine-btn').addEventListener('click', showFineForm);
                
                // حفظ الموظف
                document.getElementById('save-employee').addEventListener('click', saveEmployee);
                
                // حفظ العقد
                document.getElementById('save-contract').addEventListener('click', saveContract);
                
                // حفظ التقييم
                document.getElementById('save-evaluation').addEventListener('click', saveEvaluation);
                
                // حفظ الغرامة
                document.getElementById('save-fine').addEventListener('click', saveFine);
                
                // إغلاق النماذج
                document.getElementById('close-form').addEventListener('click', hideEmployeeForm);
                document.getElementById('cancel-form').addEventListener('click', hideEmployeeForm);
                document.getElementById('close-view').addEventListener('click', hideEmployeeView);
                document.getElementById('close-view-btn').addEventListener('click', hideEmployeeView);
                document.getElementById('close-contract-form').addEventListener('click', hideContractForm);
                document.getElementById('cancel-contract-form').addEventListener('click', hideContractForm);
                document.getElementById('close-evaluation-form').addEventListener('click', hideEvaluationForm);
                document.getElementById('cancel-evaluation-form').addEventListener('click', hideEvaluationForm);
                document.getElementById('close-fine-form').addEventListener('click', hideFineForm);
                document.getElementById('cancel-fine-form').addEventListener('click', hideFineForm);
                
                // البحث عن الموظفين
                document.getElementById('search-btn').addEventListener('click', filterEmployees);
                document.getElementById('search-input').addEventListener('keyup', filterEmployees);
                
                // البحث عن العقود
                document.getElementById('contract-search-btn').addEventListener('click', filterContracts);
                document.getElementById('contract-search-input').addEventListener('keyup', filterContracts);
                
                // البحث عن الغرامات
                document.getElementById('fines-search-btn').addEventListener('click', filterFines);
                document.getElementById('fines-search-input').addEventListener('keyup', filterFines);
                
                // فلترة حسب الحالة
                document.getElementById('status-filter').addEventListener('change', filterEmployees);
                
                // تصدير البيانات
                document.getElementById('export-btn').addEventListener('click', exportData);
                
                // تحميل الصورة
                document.getElementById('photo-upload').addEventListener('change', function(e) {
                    const file = e.target.files[0];
                    if (file) {
                        const reader = new FileReader();
                        reader.onload = function(event) {
                            document.getElementById('employee-photo-preview').src = event.target.result;
                        }
                        reader.readAsDataURL(file);
                    }
                });
                
                // تبديل التبويبات
                document.querySelectorAll('#mainTabs .nav-link').forEach(tab => {
                    tab.addEventListener('click', function(e) {
                        e.preventDefault();
                        const tabName = this.getAttribute('data-tab');
                        switchTab(tabName);
                    });
                });
                
                // تأكيد الحذف
                document.getElementById('confirm-delete').addEventListener('click', deleteEmployeeConfirmed);
                document.getElementById('cancel-delete').addEventListener('click', cancelDelete);
            }
            
            // ملء قائمة الموظفين في النماذج
            function populateEmployeeDropdowns() {
                // نموذج العقود
                const contractSelect = document.getElementById('contract-employee');
                contractSelect.innerHTML = '<option value="" class="lang-ar">اختر الموظف</option>';
                
                // نموذج التقييمات
                const evaluationSelect = document.getElementById('evaluation-employee');
                evaluationSelect.innerHTML = '<option value="" class="lang-ar">اختر الموظف</option>';
                
                // نموذج الغرامات
                const fineSelect = document.getElementById('fine-employee');
                fineSelect.innerHTML = '<option value="" class="lang-ar">اختر الموظف</option>';
                
                employees.forEach(employee => {
                    const option = document.createElement('option');
                    option.value = employee.id;
                    option.textContent = `${employee.firstName} ${employee.lastName} (${employee.job})`;
                    
                    contractSelect.appendChild(option.cloneNode(true));
                    evaluationSelect.appendChild(option.cloneNode(true));
                    fineSelect.appendChild(option.cloneNode(true));
                });
            }
            
            // تبديل التبويبات
            function switchTab(tabName) {
                // إزالة النشط من جميع التبويبات
                document.querySelectorAll('#mainTabs .nav-link').forEach(tab => {
                    tab.classList.remove('active');
                });
                
                // إخفاء جميع محتويات التبويبات
                document.querySelectorAll('.tab-pane').forEach(pane => {
                    pane.classList.remove('active');
                });
                
                // إضافة النشط للتبويب المحدد
                document.querySelector(`.nav-link[data-tab="${tabName}"]`).classList.add('active');
                document.getElementById(`${tabName}-tab`).classList.add('active');
            }
            
            // عرض نموذج الموظف
            function showEmployeeForm() {
                document.getElementById('form-title').textContent = 'إضافة موظف جديد';
                document.getElementById('employee-form').reset();
                document.getElementById('employee-id').value = '';
                document.getElementById('employee-photo-preview').src = 'https://via.placeholder.com/150';
                document.getElementById('employee-form-modal').style.display = 'flex';
            }
            
            // إخفاء نموذج الموظف
            function hideEmployeeForm() {
                document.getElementById('employee-form-modal').style.display = 'none';
            }
            
            // إخفاء عرض الموظف
            function hideEmployeeView() {
                document.getElementById('view-employee-modal').style.display = 'none';
            }
            
            // عرض نموذج العقد
            function showContractForm() {
                document.getElementById('contract-form-title').textContent = 'إضافة عقد جديد';
                document.getElementById('contract-form').reset();
                document.getElementById('contract-id').value = '';
                document.getElementById('contract-form-modal').style.display = 'flex';
            }
            
            // إخفاء نموذج العقد
            function hideContractForm() {
                document.getElementById('contract-form-modal').style.display = 'none';
            }
            
            // عرض نموذج التقييم
            function showEvaluationForm() {
                document.getElementById('evaluation-form-title').textContent = 'إضافة تقييم جديد';
                document.getElementById('evaluation-form').reset();
                document.getElementById('evaluation-id').value = '';
                document.getElementById('evaluation-form-modal').style.display = 'flex';
            }
            
            // إخفاء نموذج التقييم
            function hideEvaluationForm() {
                document.getElementById('evaluation-form-modal').style.display = 'none';
            }
            
            // عرض نموذج الغرامة
            function showFineForm() {
                document.getElementById('fine-form-title').textContent = 'إضافة غرامة جديدة';
                document.getElementById('fine-form').reset();
                document.getElementById('fine-id').value = '';
                document.getElementById('fine-form-modal').style.display = 'flex';
            }
            
            // إخفاء نموذج الغرامة
            function hideFineForm() {
                document.getElementById('fine-form-modal').style.display = 'none';
            }
            
            // حفظ الموظف
            function saveEmployee() {
                // جمع البيانات من النموذج
                const id = document.getElementById('employee-id').value;
                const firstName = document.getElementById('first-name').value;
                const lastName = document.getElementById('last-name').value;
                const email = document.getElementById('email').value;
                const phone = document.getElementById('phone').value;
                const familyPhone = document.getElementById('family-phone').value;
                const nationality = document.getElementById('nationality').value;
                const job = document.getElementById('job').value;
                const department = document.getElementById('department').value;
                const hireDate = document.getElementById('hire-date').value;
                const salary = document.getElementById('salary').value;
                const status = document.querySelector('input[name="status"]:checked').value;
                const photo = document.getElementById('employee-photo-preview').src;
                
                // إنشاء كائن الموظف
                const employee = {
                    id: id ? parseInt(id) : Date.now(),
                    firstName: firstName,
                    lastName: lastName,
                    img: photo,
                    email: email,
                    phone: phone,
                    familyPhone: familyPhone,
                    nationality: nationality,
                    job: job,
                    department: department,
                    hireDate: hireDate,
                    salary: parseInt(salary),
                    status: status
                };
                
                if (id) {
                    // تحديث الموظف الموجود
                    const index = employees.findIndex(e => e.id === parseInt(id));
                    if (index !== -1) {
                        employees[index] = employee;
                        showAlert('تم تحديث بيانات الموظف بنجاح', 'success');
                    }
                } else {
                    // إضافة موظف جديد
                    employees.push(employee);
                    showAlert('تم إضافة الموظف الجديد بنجاح', 'success');
                }
                
                // حفظ التغييرات
                saveData();
                
                // إعادة عرض الموظفين
                renderEmployees();
                
                // إغلاق النموذج
                hideEmployeeForm();
            }
            
            // حفظ العقد
            function saveContract() {
                // جمع البيانات من النموذج
                const id = document.getElementById('contract-id').value;
                const employeeId = document.getElementById('contract-employee').value;
                const type = document.getElementById('contract-type').value;
                const number = document.getElementById('contract-number').value;
                const startDate = document.getElementById('contract-start').value;
                const endDate = document.getElementById('contract-end').value;
                const notes = document.getElementById('contract-notes').value;
                
                // إنشاء كائن العقد
                const contract = {
                    id: id ? parseInt(id) : Date.now(),
                    employeeId: parseInt(employeeId),
                    type: type,
                    number: number,
                    startDate: startDate,
                    endDate: endDate,
                    notes: notes,
                    status: 'نشط'
                };
                
                if (id) {
                    // تحديث العقد الموجود
                    const index = contracts.findIndex(c => c.id === parseInt(id));
                    if (index !== -1) {
                        contracts[index] = contract;
                        showAlert('تم تحديث العقد بنجاح', 'success');
                    }
                } else {
                    // إضافة عقد جديد
                    contracts.push(contract);
                    showAlert('تم إضافة العقد الجديد بنجاح', 'success');
                }
                
                // حفظ التغييرات
                saveData();
                
                // إعادة عرض العقود
                renderContracts();
                
                // إغلاق النموذج
                hideContractForm();
            }
            
            // حفظ التقييم
            function saveEvaluation() {
                // جمع البيانات من النموذج
                const id = document.getElementById('evaluation-id').value;
                const employeeId = document.getElementById('evaluation-employee').value;
                const period = document.getElementById('evaluation-period').value;
                const operationsEvaluation = document.getElementById('operations-evaluation').value;
                const overallEvaluation = document.getElementById('overall-evaluation').value;
                const evaluationDays = document.getElementById('evaluation-days').value;
                const notes = document.getElementById('evaluation-notes').value;
                const evaluator = document.getElementById('evaluation-evaluator').value;
                
                // إنشاء كائن التقييم
                const evaluation = {
                    id: id ? parseInt(id) : Date.now(),
                    employeeId: parseInt(employeeId),
                    period: period,
                    operationsEvaluation: parseInt(operationsEvaluation),
                    overallEvaluation: parseInt(overallEvaluation),
                    evaluationDays: parseInt(evaluationDays),
                    notes: notes,
                    evaluator: evaluator
                };
                
                if (id) {
                    // تحديث التقييم الموجود
                    const index = evaluations.findIndex(e => e.id === parseInt(id));
                    if (index !== -1) {
                        evaluations[index] = evaluation;
                        showAlert('تم تحديث التقييم بنجاح', 'success');
                    }
                } else {
                    // إضافة تقييم جديد
                    evaluations.push(evaluation);
                    showAlert('تم إضافة التقييم الجديد بنجاح', 'success');
                }
                
                // حفظ التغييرات
                saveData();
                
                // إعادة عرض التقييمات
                renderEvaluations();
                
                // إغلاق النموذج
                hideEvaluationForm();
            }
            
            // حفظ الغرامة
            function saveFine() {
                // جمع البيانات من النموذج
                const id = document.getElementById('fine-id').value;
                const employeeId = document.getElementById('fine-employee').value;
                const amount = document.getElementById('fine-amount').value;
                const date = document.getElementById('fine-date').value;
                const reason = document.getElementById('fine-reason').value;
                const status = document.querySelector('input[name="fine-status"]:checked').value;
                
                // إنشاء كائن الغرامة
                const fine = {
                    id: id ? parseInt(id) : Date.now(),
                    employeeId: parseInt(employeeId),
                    amount: parseInt(amount),
                    date: date,
                    reason: reason,
                    status: status
                };
                
                if (id) {
                    // تحديث الغرامة الموجود
                    const index = fines.findIndex(f => f.id === parseInt(id));
                    if (index !== -1) {
                        fines[index] = fine;
                        showAlert('تم تحديث الغرامة بنجاح', 'success');
                    }
                } else {
                    // إضافة غرامة جديدة
                    fines.push(fine);
                    showAlert('تم إضافة الغرامة الجديدة بنجاح', 'success');
                }
                
                // حفظ التغييرات
                saveData();
                
                // إعادة عرض الغرامات
                renderFines();
                
                // إغلاق النموذج
                hideFineForm();
            }
            
            // عرض الموظفين في الجدول
            function renderEmployees() {
                const tbody = document.getElementById('employees-table-body');
                tbody.innerHTML = '';
                
                if (employees.length === 0) {
                    document.getElementById('no-employees').classList.remove('d-none');
                    return;
                }
                
                document.getElementById('no-employees').classList.add('d-none');
                
                employees.forEach(employee => {
                    const row = document.createElement('tr');
                    row.className = 'employee-row';
                    row.innerHTML = `
                        <td>${employee.id}</td>
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="${employee.img}" class="employee-img me-3" alt="${employee.firstName} ${employee.lastName}">
                                <div>
                                    <h6 class="mb-0">${employee.firstName} ${employee.lastName}</h6>
                                    <small class="text-muted">${employee.email}</small>
                                </div>
                            </div>
                        </td>
                        <td>${employee.phone}</td>
                        <td>${employee.job}</td>
                        <td>${employee.department}</td>
                        <td>
                            <span class="badge status-badge ${getStatusClass(employee.status)}">
                                ${employee.status}
                            </span>
                        </td>
                        <td class="action-buttons">
                            <div class="btn-group">
                                <button class="btn btn-sm btn-primary view-btn" data-id="${employee.id}">
                                    <i class="bi bi-eye"></i> <span class="lang-ar">عرض</span>
                                </button>
                                <button class="btn btn-sm btn-warning edit-btn" data-id="${employee.id}">
                                    <i class="bi bi-pencil"></i> <span class="lang-ar">تعديل</span>
                                </button>
                                <button class="btn btn-sm btn-danger delete-btn" data-id="${employee.id}">
                                    <i class="bi bi-trash"></i> <span class="lang-ar">حذف</span>
                                </button>
                            </div>
                        </td>
                    `;
                    tbody.appendChild(row);
                });
                
                // إرفاق أحداث الأزرار
                attachEmployeeEvents();
            }
            
            // عرض العقود في الجدول
            function renderContracts() {
                const tbody = document.getElementById('contracts-table-body');
                tbody.innerHTML = '';
                
                contracts.forEach(contract => {
                    const employee = employees.find(e => e.id === contract.employeeId);
                    if (!employee) return;
                    
                    const row = document.createElement('tr');
                    row.className = 'contract-row';
                    row.innerHTML = `
                        <td>${contract.number}</td>
                        <td>${employee.firstName} ${employee.lastName}</td>
                        <td>${contract.type}</td>
                        <td>${contract.startDate}</td>
                        <td>${contract.endDate}</td>
                        <td>
                            <span class="badge status-badge ${getStatusClass(contract.status)}">
                                ${contract.status}
                            </span>
                        </td>
                        <td class="action-buttons">
                            <div class="btn-group">
                                <button class="btn btn-sm btn-warning edit-contract-btn" data-id="${contract.id}">
                                    <i class="bi bi-pencil"></i> <span class="lang-ar">تعديل</span>
                                </button>
                                <button class="btn btn-sm btn-danger delete-contract-btn" data-id="${contract.id}">
                                    <i class="bi bi-trash"></i> <span class="lang-ar">حذف</span>
                                </button>
                            </div>
                        </td>
                    `;
                    tbody.appendChild(row);
                });
                
                // إرفاق أحداث الأزرار للعقود
                attachContractEvents();
            }
            
            // عرض التقييمات في الجدول
            function renderEvaluations() {
                const tbody = document.getElementById('evaluations-table-body');
                tbody.innerHTML = '';
                
                evaluations.forEach(evaluation => {
                    const employee = employees.find(e => e.id === evaluation.employeeId);
                    if (!employee) return;
                    
                    const row = document.createElement('tr');
                    row.className = 'evaluation-row';
                    row.innerHTML = `
                        <td>${employee.firstName} ${employee.lastName}</td>
                        <td class="number-cell">${evaluation.operationsEvaluation}</td>
                        <td class="number-cell">${evaluation.overallEvaluation}</td>
                        <td class="number-cell">${evaluation.evaluationDays}</td>
                        <td>${evaluation.notes || '-'}</td>
                        <td class="action-buttons">
                            <div class="btn-group">
                                <button class="btn btn-sm btn-warning edit-evaluation-btn" data-id="${evaluation.id}">
                                    <i class="bi bi-pencil"></i> <span class="lang-ar">تعديل</span>
                                </button>
                                <button class="btn btn-sm btn-danger delete-evaluation-btn" data-id="${evaluation.id}">
                                    <i class="bi bi-trash"></i> <span class="lang-ar">حذف</span>
                                </button>
                            </div>
                        </td>
                    `;
                    tbody.appendChild(row);
                });
                
                // إرفاق أحداث الأزرار للتقييمات
                attachEvaluationEvents();
            }
            
            // عرض الغرامات في الجدول
            function renderFines() {
                const tbody = document.getElementById('fines-table-body');
                tbody.innerHTML = '';
                
                fines.forEach(fine => {
                    const employee = employees.find(e => e.id === fine.employeeId);
                    if (!employee) return;
                    
                    const row = document.createElement('tr');
                    row.className = 'fine-row';
                    row.innerHTML = `
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="${employee.img}" class="employee-img me-3" alt="${employee.firstName} ${employee.lastName}">
                                <div>
                                    <h6 class="mb-0">${employee.firstName} ${employee.lastName}</h6>
                                    <small class="text-muted">${employee.job}</small>
                                </div>
                            </div>
                        </td>
                        <td class="number-cell">${new Intl.NumberFormat('ar-IQ').format(fine.amount)}</td>
                        <td>${fine.date}</td>
                        <td>${fine.reason}</td>
                        <td>
                            <span class="badge status-badge ${getStatusClass(fine.status)}">
                                ${fine.status}
                            </span>
                        </td>
                        <td class="action-buttons">
                            <div class="btn-group">
                                <button class="btn btn-sm btn-warning edit-fine-btn" data-id="${fine.id}">
                                    <i class="bi bi-pencil"></i> <span class="lang-ar">تعديل</span>
                                </button>
                                <button class="btn btn-sm btn-danger delete-fine-btn" data-id="${fine.id}">
                                    <i class="bi bi-trash"></i> <span class="lang-ar">حذف</span>
                                </button>
                            </div>
                        </td>
                    `;
                    tbody.appendChild(row);
                });
                
                // إرفاق أحداث الأزرار للغرامات
                attachFineEvents();
            }
            
            // إرفاق أحداث الموظفين
            function attachEmployeeEvents() {
                // عرض تفاصيل الموظف
                document.querySelectorAll('.view-btn').forEach(button => {
                    button.addEventListener('click', function() {
                        const employeeId = parseInt(this.getAttribute('data-id'));
                        const employee = employees.find(e => e.id === employeeId);
                        
                        // تعبئة بيانات العرض
                        document.getElementById('view-name').textContent = `${employee.firstName} ${employee.lastName}`;
                        document.getElementById('view-id').textContent = `#EMP-${employee.id}`;
                        document.getElementById('view-email').textContent = employee.email;
                        document.getElementById('view-phone').textContent = employee.phone;
                        document.getElementById('view-family-phone').textContent = employee.familyPhone;
                        document.getElementById('view-nationality').textContent = employee.nationality;
                        document.getElementById('view-job').textContent = employee.job;
                        document.getElementById('view-department').textContent = employee.department;
                        document.getElementById('view-hire-date').textContent = employee.hireDate;
                        document.getElementById('view-salary').textContent = new Intl.NumberFormat('ar-IQ').format(employee.salary) + ' د.ع';
                        document.getElementById('view-status').textContent = employee.status;
                        document.getElementById('view-status').className = `badge ${getStatusClass(employee.status)}`;
                        document.getElementById('view-photo').src = employee.img;
                        
                        // عرض العقود المرتبطة
                        const contractsContainer = document.getElementById('employee-contracts-container');
                        contractsContainer.innerHTML = '';
                        
                        const employeeContracts = contracts.filter(c => c.employeeId === employeeId);
                        if (employeeContracts.length === 0) {
                            contractsContainer.innerHTML = '<p class="text-muted">لا يوجد عقود مرتبطة بهذا الموظف</p>';
                        } else {
                            employeeContracts.forEach(contract => {
                                const contractDiv = document.createElement('div');
                                contractDiv.className = 'contract-details';
                                contractDiv.innerHTML = `
                                    <strong>${contract.number}</strong>
                                    <div>نوع العقد: ${contract.type}</div>
                                    <div>تاريخ البدء: ${contract.startDate} - تاريخ الانتهاء: ${contract.endDate}</div>
                                    <div>الحالة: <span class="badge ${getStatusClass(contract.status)}">${contract.status}</span></div>
                                    <div>${contract.notes || ''}</div>
                                `;
                                contractsContainer.appendChild(contractDiv);
                            });
                        }
                        
                        // عرض التقييمات المرتبطة
                        const evaluationsContainer = document.getElementById('employee-evaluations-container');
                        evaluationsContainer.innerHTML = '';
                        
                        const employeeEvaluations = evaluations.filter(e => e.employeeId === employeeId);
                        if (employeeEvaluations.length === 0) {
                            evaluationsContainer.innerHTML = '<p class="text-muted">لا يوجد تقييمات مرتبطة بهذا الموظف</p>';
                        } else {
                            employeeEvaluations.forEach(evaluation => {
                                const evaluationDiv = document.createElement('div');
                                evaluationDiv.className = 'evaluation-details';
                                evaluationDiv.innerHTML = `
                                    <div>الفترة: ${evaluation.period}</div>
                                    <div>التقييم حسب العمليات: ${evaluation.operationsEvaluation}%</div>
                                    <div>التقييم الكلي: ${evaluation.overallEvaluation}%</div>
                                    <div>المقيّم: ${evaluation.evaluator}</div>
                                    <div>${evaluation.notes || ''}</div>
                                `;
                                evaluationsContainer.appendChild(evaluationDiv);
                            });
                        }
                        
                        // عرض الغرامات المرتبطة
                        const finesContainer = document.getElementById('employee-fines-container');
                        finesContainer.innerHTML = '';
                        
                        const employeeFines = fines.filter(f => f.employeeId === employeeId);
                        if (employeeFines.length === 0) {
                            finesContainer.innerHTML = '<p class="text-muted">لا يوجد غرامات مرتبطة بهذا الموظف</p>';
                        } else {
                            employeeFines.forEach(fine => {
                                const fineDiv = document.createElement('div');
                                fineDiv.className = 'fines-details';
                                fineDiv.innerHTML = `
                                    <div>المبلغ: <strong>${new Intl.NumberFormat('ar-IQ').format(fine.amount)} د.ع</strong></div>
                                    <div>التاريخ: ${fine.date}</div>
                                    <div>السبب: ${fine.reason}</div>
                                    <div>الحالة: <span class="badge ${getStatusClass(fine.status)}">${fine.status}</span></div>
                                `;
                                finesContainer.appendChild(fineDiv);
                            });
                        }
                        
                        // إظهار نافذة العرض
                        document.getElementById('view-employee-modal').style.display = 'flex';
                    });
                });
                
                // تعديل الموظف
                document.querySelectorAll('.edit-btn').forEach(button => {
                    button.addEventListener('click', function() {
                        const employeeId = parseInt(this.getAttribute('data-id'));
                        const employee = employees.find(e => e.id === employeeId);
                        
                        // تعبئة النموذج ببيانات الموظف
                        document.getElementById('form-title').textContent = 'تعديل بيانات الموظف';
                        document.getElementById('employee-id').value = employee.id;
                        document.getElementById('first-name').value = employee.firstName;
                        document.getElementById('last-name').value = employee.lastName;
                        document.getElementById('email').value = employee.email;
                        document.getElementById('phone').value = employee.phone;
                        document.getElementById('family-phone').value = employee.familyPhone;
                        document.getElementById('nationality').value = employee.nationality;
                        document.getElementById('job').value = employee.job;
                        document.getElementById('department').value = employee.department;
                        document.getElementById('hire-date').value = employee.hireDate;
                        document.getElementById('salary').value = employee.salary;
                        
                        // تحديد حالة الراديو
                        document.querySelectorAll('input[name="status"]').forEach(radio => {
                            if (radio.value === employee.status) {
                                radio.checked = true;
                            }
                        });
                        
                        // تعيين صورة المعاينة
                        document.getElementById('employee-photo-preview').src = employee.img;
                        
                        // إظهار النموذج
                        document.getElementById('employee-form-modal').style.display = 'flex';
                    });
                });
                
                // حذف الموظف
                document.querySelectorAll('.delete-btn').forEach(button => {
                    button.addEventListener('click', function() {
                        const employeeId = parseInt(this.getAttribute('data-id'));
                        const employee = employees.find(e => e.id === employeeId);
                        
                        // إظهار نافذة التأكيد
                        document.getElementById('confirmation-title').textContent = 'تأكيد حذف الموظف';
                        document.getElementById('confirmation-message').textContent = `هل أنت متأكد من حذف الموظف ${employee.firstName} ${employee.lastName}؟`;
                        document.getElementById('confirmation-modal').style.display = 'flex';
                        
                        // تخزين معرف الموظف المراد حذفه
                        document.getElementById('confirm-delete').dataset.id = employeeId;
                    });
                });
            }
            
            // تأكيد حذف الموظف
            function deleteEmployeeConfirmed() {
                const employeeId = parseInt(this.dataset.id);
                const employee = employees.find(e => e.id === employeeId);
                
                // حذف الموظف من المصفوفة
                employees = employees.filter(e => e.id !== employeeId);
                
                // حذف العقود المرتبطة بالموظف
                contracts = contracts.filter(c => c.employeeId !== employeeId);
                
                // حذف التقييمات المرتبطة بالموظف
                evaluations = evaluations.filter(e => e.employeeId !== employeeId);
                
                // حذف الغرامات المرتبطة بالموظف
                fines = fines.filter(f => f.employeeId !== employeeId);
                
                // حفظ التغييرات
                saveData();
                
                // إعادة عرض الموظفين
                renderEmployees();
                
                // إعادة عرض العقود
                renderContracts();
                
                // إعادة عرض التقييمات
                renderEvaluations();
                
                // إعادة عرض الغرامات
                renderFines();
                
                // إغلاق نافذة التأكيد
                document.getElementById('confirmation-modal').style.display = 'none';
                
                // إظهار رسالة النجاح
                showAlert(`تم حذف الموظف ${employee.firstName} ${employee.lastName} بنجاح`, 'success');
            }
            
            // إلغاء الحذف
            function cancelDelete() {
                document.getElementById('confirmation-modal').style.display = 'none';
            }
            
            // إرفاق أحداث العقود
            function attachContractEvents() {
                // تعديل العقد
                document.querySelectorAll('.edit-contract-btn').forEach(button => {
                    button.addEventListener('click', function() {
                        const contractId = parseInt(this.getAttribute('data-id'));
                        const contract = contracts.find(c => c.id === contractId);
                        
                        // تعبئة النموذج ببيانات العقد
                        document.getElementById('contract-form-title').textContent = 'تعديل العقد';
                        document.getElementById('contract-id').value = contract.id;
                        document.getElementById('contract-employee').value = contract.employeeId;
                        document.getElementById('contract-type').value = contract.type;
                        document.getElementById('contract-number').value = contract.number;
                        document.getElementById('contract-start').value = contract.startDate;
                        document.getElementById('contract-end').value = contract.endDate;
                        document.getElementById('contract-notes').value = contract.notes || '';
                        
                        // إظهار النموذج
                        document.getElementById('contract-form-modal').style.display = 'flex';
                    });
                });
                
                // حذف العقد
                document.querySelectorAll('.delete-contract-btn').forEach(button => {
                    button.addEventListener('click', function() {
                        const contractId = parseInt(this.getAttribute('data-id'));
                        const contract = contracts.find(c => c.id === contractId);
                        
                        const message = 'هل أنت متأكد من حذف هذا العقد؟';
                        
                        if(confirm(message)) {
                            // حذف العقد من المصفوفة
                            contracts = contracts.filter(c => c.id !== contractId);
                            
                            // حفظ التغييرات
                            saveData();
                            
                            // إعادة عرض العقود
                            renderContracts();
                            
                            // إظهار رسالة النجاح
                            showAlert('تم حذف العقد بنجاح', 'success');
                        }
                    });
                });
            }
            
            // إرفاق أحداث التقييمات
            function attachEvaluationEvents() {
                // تعديل التقييم
                document.querySelectorAll('.edit-evaluation-btn').forEach(button => {
                    button.addEventListener('click', function() {
                        const evaluationId = parseInt(this.getAttribute('data-id'));
                        const evaluation = evaluations.find(e => e.id === evaluationId);
                        
                        // تعبئة النموذج ببيانات التقييم
                        document.getElementById('evaluation-form-title').textContent = 'تعديل التقييم';
                        document.getElementById('evaluation-id').value = evaluation.id;
                        document.getElementById('evaluation-employee').value = evaluation.employeeId;
                        document.getElementById('operations-evaluation').value = evaluation.operationsEvaluation;
                        document.getElementById('overall-evaluation').value = evaluation.overallEvaluation;
                        document.getElementById('evaluation-days').value = evaluation.evaluationDays;
                        document.getElementById('evaluation-notes').value = evaluation.notes || '';
                        
                        // إظهار النموذج
                        document.getElementById('evaluation-form-modal').style.display = 'flex';
                    });
                });
                
                // حذف التقييم
                document.querySelectorAll('.delete-evaluation-btn').forEach(button => {
                    button.addEventListener('click', function() {
                        const evaluationId = parseInt(this.getAttribute('data-id'));
                        const evaluation = evaluations.find(e => e.id === evaluationId);
                        const employee = employees.find(e => e.id === evaluation.employeeId);
                        
                        const message = `هل أنت متأكد من حذف تقييم الموظف ${employee.firstName} ${employee.lastName}؟`;
                        
                        if(confirm(message)) {
                            // حذف التقييم من المصفوفة
                            evaluations = evaluations.filter(e => e.id !== evaluationId);
                            
                            // حفظ التغييرات
                            saveData();
                            
                            // إعادة عرض التقييمات
                            renderEvaluations();
                            
                            // إظهار رسالة النجاح
                            showAlert('تم حذف التقييم بنجاح', 'success');
                        }
                    });
                });
            }
            
            // إرفاق أحداث الغرامات
            function attachFineEvents() {
                // تعديل الغرامة
                document.querySelectorAll('.edit-fine-btn').forEach(button => {
                    button.addEventListener('click', function() {
                        const fineId = parseInt(this.getAttribute('data-id'));
                        const fine = fines.find(f => f.id === fineId);
                        
                        // تعبئة النموذج ببيانات الغرامة
                        document.getElementById('fine-form-title').textContent = 'تعديل الغرامة';
                        document.getElementById('fine-id').value = fine.id;
                        document.getElementById('fine-employee').value = fine.employeeId;
                        document.getElementById('fine-amount').value = fine.amount;
                        document.getElementById('fine-date').value = fine.date;
                        document.getElementById('fine-reason').value = fine.reason;
                        
                        // تحديد حالة الراديو
                        document.querySelectorAll('input[name="fine-status"]').forEach(radio => {
                            if (radio.value === fine.status) {
                                radio.checked = true;
                            }
                        });
                        
                        // إظهار النموذج
                        document.getElementById('fine-form-modal').style.display = 'flex';
                    });
                });
                
                // حذف الغرامة
                document.querySelectorAll('.delete-fine-btn').forEach(button => {
                    button.addEventListener('click', function() {
                        const fineId = parseInt(this.getAttribute('data-id'));
                        const fine = fines.find(f => f.id === fineId);
                        const employee = employees.find(e => e.id === fine.employeeId);
                        
                        const message = `هل أنت متأكد من حذف غرامة الموظف ${employee.firstName} ${employee.lastName}؟`;
                        
                        if(confirm(message)) {
                            // حذف الغرامة من المصفوفة
                            fines = fines.filter(f => f.id !== fineId);
                            
                            // حفظ التغييرات
                            saveData();
                            
                            // إعادة عرض الغرامات
                            renderFines();
                            
                            // إظهار رسالة النجاح
                            showAlert('تم حذف الغرامة بنجاح', 'success');
                        }
                    });
                });
            }
            
            // دالة مساعدة للحصول على لون الحالة
            function getStatusClass(status) {
                switch(status) {
                    case 'نشط':
                    case 'Active':
                        return 'bg-success';
                    case 'إجازة':
                    case 'Vacation':
                        return 'bg-warning';
                    case 'غير نشط':
                    case 'Inactive':
                        return 'bg-danger';
                    case 'ينتهي قريباً':
                    case 'Expiring Soon':
                        return 'bg-warning';
                    case 'منتهي':
                    case 'Expired':
                        return 'bg-danger';
                    case 'مدفوعة':
                    case 'Paid':
                        return 'bg-success';
                    case 'معلقة':
                    case 'Pending':
                        return 'bg-warning';
                    default:
                        return 'bg-secondary';
                }
            }
            
            // إظهار رسالة تنبيه
            function showAlert(message, type) {
                // إزالة أي رسائل سابقة
                const existingAlert = document.querySelector('.alert-notification');
                if (existingAlert) existingAlert.remove();
                
                const alert = document.createElement('div');
                alert.className = `alert alert-${type} alert-dismissible fade show alert-notification`;
                alert.innerHTML = `
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                `;
                document.body.appendChild(alert);
                
                // إزالة الرسالة بعد 3 ثوان
                setTimeout(() => {
                    alert.classList.remove('show');
                    setTimeout(() => alert.remove(), 300);
                }, 3000);
            }
            
            // فلترة الموظفين
            function filterEmployees() {
                const searchTerm = document.getElementById('search-input').value.toLowerCase();
                const statusFilter = document.getElementById('status-filter').value;
                
                const filteredEmployees = employees.filter(employee => {
                    const matchesSearch = 
                        employee.firstName.toLowerCase().includes(searchTerm) ||
                        employee.lastName.toLowerCase().includes(searchTerm) ||
                        employee.email.toLowerCase().includes(searchTerm) ||
                        employee.phone.toLowerCase().includes(searchTerm) ||
                        employee.job.toLowerCase().includes(searchTerm) ||
                        employee.department.toLowerCase().includes(searchTerm);
                    
                    const matchesStatus = statusFilter === 'all' || employee.status === statusFilter;
                    
                    return matchesSearch && matchesStatus;
                });
                
                renderFilteredEmployees(filteredEmployees);
            }
            
            // فلترة العقود
            function filterContracts() {
                const searchTerm = document.getElementById('contract-search-input').value.toLowerCase();
                
                const filteredContracts = contracts.filter(contract => {
                    const employee = employees.find(e => e.id === contract.employeeId);
                    if (!employee) return false;
                    
                    return contract.number.toLowerCase().includes(searchTerm) ||
                           contract.type.toLowerCase().includes(searchTerm) ||
                           employee.firstName.toLowerCase().includes(searchTerm) ||
                           employee.lastName.toLowerCase().includes(searchTerm);
                });
                
                renderFilteredContracts(filteredContracts);
            }
            
            // فلترة الغرامات
            function filterFines() {
                const searchTerm = document.getElementById('fines-search-input').value.toLowerCase();
                
                const filteredFines = fines.filter(fine => {
                    const employee = employees.find(e => e.id === fine.employeeId);
                    if (!employee) return false;
                    
                    return employee.firstName.toLowerCase().includes(searchTerm) ||
                           employee.lastName.toLowerCase().includes(searchTerm) ||
                           fine.reason.toLowerCase().includes(searchTerm);
                });
                
                renderFilteredFines(filteredFines);
            }
            
            // عرض الموظفين بعد الفلترة
            function renderFilteredEmployees(filteredEmployees) {
                const tbody = document.getElementById('employees-table-body');
                tbody.innerHTML = '';
                
                if (filteredEmployees.length === 0) {
                    document.getElementById('no-employees').classList.remove('d-none');
                    return;
                }
                
                document.getElementById('no-employees').classList.add('d-none');
                
                filteredEmployees.forEach(employee => {
                    const row = document.createElement('tr');
                    row.className = 'employee-row';
                    row.innerHTML = `
                        <td>${employee.id}</td>
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="${employee.img}" class="employee-img me-3" alt="${employee.firstName} ${employee.lastName}">
                                <div>
                                    <h6 class="mb-0">${employee.firstName} ${employee.lastName}</h6>
                                    <small class="text-muted">${employee.email}</small>
                                </div>
                            </div>
                        </td>
                        <td>${employee.phone}</td>
                        <td>${employee.job}</td>
                        <td>${employee.department}</td>
                        <td>
                            <span class="badge status-badge ${getStatusClass(employee.status)}">
                                ${employee.status}
                            </span>
                        </td>
                        <td class="action-buttons">
                            <div class="btn-group">
                                <button class="btn btn-sm btn-primary view-btn" data-id="${employee.id}">
                                    <i class="bi bi-eye"></i> <span class="lang-ar">عرض</span>
                                </button>
                                <button class="btn btn-sm btn-warning edit-btn" data-id="${employee.id}">
                                    <i class="bi bi-pencil"></i> <span class="lang-ar">تعديل</span>
                                </button>
                                <button class="btn btn-sm btn-danger delete-btn" data-id="${employee.id}">
                                    <i class="bi bi-trash"></i> <span class="lang-ar">حذف</span>
                                </button>
                            </div>
                        </td>
                    `;
                    tbody.appendChild(row);
                });
                
                // إرفاق أحداث الأزرار
                attachEmployeeEvents();
            }
            
            // عرض العقود بعد الفلترة
            function renderFilteredContracts(filteredContracts) {
                const tbody = document.getElementById('contracts-table-body');
                tbody.innerHTML = '';
                
                filteredContracts.forEach(contract => {
                    const employee = employees.find(e => e.id === contract.employeeId);
                    if (!employee) return;
                    
                    const row = document.createElement('tr');
                    row.className = 'contract-row';
                    row.innerHTML = `
                        <td>${contract.number}</td>
                        <td>${employee.firstName} ${employee.lastName}</td>
                        <td>${contract.type}</td>
                        <td>${contract.startDate}</td>
                        <td>${contract.endDate}</td>
                        <td>
                            <span class="badge status-badge ${getStatusClass(contract.status)}">
                                ${contract.status}
                            </span>
                        </td>
                        <td class="action-buttons">
                            <div class="btn-group">
                                <button class="btn btn-sm btn-warning edit-contract-btn" data-id="${contract.id}">
                                    <i class="bi bi-pencil"></i> <span class="lang-ar">تعديل</span>
                                </button>
                                <button class="btn btn-sm btn-danger delete-contract-btn" data-id="${contract.id}">
                                    <i class="bi bi-trash"></i> <span class="lang-ar">حذف</span>
                                </button>
                            </div>
                        </td>
                    `;
                    tbody.appendChild(row);
                });
                
                // إرفاق أحداث الأزرار للعقود
                attachContractEvents();
            }
            
            // عرض الغرامات بعد الفلترة
            function renderFilteredFines(filteredFines) {
                const tbody = document.getElementById('fines-table-body');
                tbody.innerHTML = '';
                
                filteredFines.forEach(fine => {
                    const employee = employees.find(e => e.id === fine.employeeId);
                    if (!employee) return;
                    
                    const row = document.createElement('tr');
                    row.className = 'fine-row';
                    row.innerHTML = `
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="${employee.img}" class="employee-img me-3" alt="${employee.firstName} ${employee.lastName}">
                                <div>
                                    <h6 class="mb-0">${employee.firstName} ${employee.lastName}</h6>
                                    <small class="text-muted">${employee.job}</small>
                                </div>
                            </div>
                        </td>
                        <td class="number-cell">${new Intl.NumberFormat('ar-IQ').format(fine.amount)}</td>
                        <td>${fine.date}</td>
                        <td>${fine.reason}</td>
                        <td>
                            <span class="badge status-badge ${getStatusClass(fine.status)}">
                                ${fine.status}
                            </span>
                        </td>
                        <td class="action-buttons">
                            <div class="btn-group">
                                <button class="btn btn-sm btn-warning edit-fine-btn" data-id="${fine.id}">
                                    <i class="bi bi-pencil"></i> <span class="lang-ar">تعديل</span>
                                </button>
                                <button class="btn btn-sm btn-danger delete-fine-btn" data-id="${fine.id}">
                                    <i class="bi bi-trash"></i> <span class="lang-ar">حذف</span>
                                </button>
                            </div>
                        </td>
                    `;
                    tbody.appendChild(row);
                });
                
                // إرفاق أحداث الأزرار للغرامات
                attachFineEvents();
            }
            
            // تصدير البيانات
            function exportData() {
                const dataStr = "data:text/json;charset=utf-8," + encodeURIComponent(JSON.stringify(employees));
                const downloadAnchorNode = document.createElement('a');
                downloadAnchorNode.setAttribute("href", dataStr);
                downloadAnchorNode.setAttribute("download", "employees.json");
                document.body.appendChild(downloadAnchorNode);
                downloadAnchorNode.click();
                downloadAnchorNode.remove();
                
                showAlert('تم تصدير بيانات الموظفين بنجاح', 'success');
            }
            
            // بدء التطبيق
            initApp();
        });
    </script>
</body>
</html>
